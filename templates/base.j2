    {% block head %}
    {% endblock head%}
</head>
<div id="particles-js">
    
</div>
<body class="w-full h-full pb-24 m-0 bg-gradient-to-b from-[#373B44] to-[#4286f4]">
<nav class="w-full flex flex-col items-center justify-center h-auto bg-white/[0.03] backdrop-blur-sm shadow-md">
    <a href="{{url_for('index')}}"><h1 class="mt-4 text-3xl font-semibold text-gray-100 select-none md:text-5xl">{{title}}</h1></a>
    <h2 class="mb-2 text-white opacity-50 select-none">Powered by CrackTek</h2>
    {% if current_user.is_authenticated %}
    <span>
    <a class="inline-block px-4 py-2 mx-2 my-3 font-semibold text-center text-white transition-all border-2 rounded-lg hover:bg-white/20" href="{{url_for('create')}}">New entry</a>
    <a class="inline-block px-4 py-2 mx-2 my-3 font-semibold text-center text-white transition-all border-2 rounded-lg hover:bg-white/20" href="{{url_for('logout')}}">Log out</a>
    </span>
    {% else %}
    <a class="inline-block px-4 py-2 mx-2 my-3 font-semibold text-center text-white transition-all border-2 rounded-lg hover:bg-white/20" href="{{url_for('login')}}">Log in</a>
    {% endif %}
</nav>
