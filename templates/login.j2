{% extends "base.j2" %}

{% block body %}
<div class="flex flex-col items-center justify-start w-full h-full px-8 py-6 sm:px-16 md:px-28">
    <form action="{{url_for('login')}}" class='flex flex-col items-center justify-center w-full text-white h-3/4' method="post">
        {{form.hidden_tag()}}
        {{form.login.label()}}
        {{form.login(class='login-field')}}
        {{form.password.label()}}
        {{form.password(class='login-field')}}
        {{form.submit(class="btn-submit")}}
    </form>
</div>
{% endblock body %}