{% extends current_base %}

{% block body %}
<div class="h-full px-8 py-6 sm:px-16 md:px-28">
{% for e in entries %}
    <a href="{{url_for('view_entry', eid=e.id)}}">
    <div class="flex flex-col items-start justify-center w-full h-auto p-4 mb-4 text-white transition-all rounded-md shadow-md post backdrop-blur-sm bg-white/5 hover:shadow-xl">
        {% if e.private %}
        <span class="mb-2 font-semibold opacity-75">PRIVATE</span>
        {% endif %}
        <h2 class="text-3xl font-medium ">{{e.date.strftime('%d.%m.%Y')}}</h2>
        <h3 class="mb-2 opacity-50">{{e.date.strftime('%H:%M')}}</h3>
        <hr class="w-full mb-2">
        <p class="text-lg">{{e.text}}</p>
    </div>
    </a>
{% endfor %}
</div>
{% endblock body %}